{
    "version": 2,
    "builds": [
        { "src": "api/index.js", "use": "@now/node-server" },
        { "src": "*.html", "use": "@now/static"},
        { "src": "*.txt", "use": "@now/static"}
        ],
    "routes": [
        {
        "src": "/api",
        "dest": "/api/index.js",
        "methods": ["GET"]
        },
        {
        "src": "/api/users",
        "dest": "/api/index.js",
        "methods": ["GET"]
        },
        {
        "src": "/api/user",
        "dest": "/api/index.js",
        "methods": ["POST"]
        }
    ]
}