{
    "version": 2,
    "builds": [
        { "src": "index.js", "use": "@now/node-server" },
        { "src": "public/**/*", "use": "@now/static"}
        ],
    "routes": [
        {
        "src": "/api",
        "dest": "/index.js",
        "methods": ["GET"]
        },
        {
        "src": "/api/(.*)",
        "dest": "/index.js"
        },
        {
        "src": "/",
        "dest": "/public/index.html",
        "methods": ["GET"]
        },
        {
        "src": "/(.*)",
        "dest": "/public/$1",
        "methods": ["GET"]
        }
    ],
    "env": {
        "NOW_PGCREDENTIALS": "@pgcredentials",
        "NOW_PGCREDENTIALS2": "@pgcredentials2"
    }    
}