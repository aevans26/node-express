{
    "version": 2,
    "builds": [
        { "src": "api/index.js", "use": "@now/node-server" },
        { "src": "*/**", "use": "@now/static"}
        ],
    "routes": [
        {
        "src": "/api",
        "dest": "/api/index.js",
        "methods": ["GET"]
        },
        {
        "src": "/api/users",
        "dest": "/api/index.js",
        "methods": ["GET"]
        },
        {
        "src": "/api/user",
        "dest": "/api/index.js",
        "methods": ["POST"]
        }
    ],
 "build": {
    "env": {
      "NOW_PGCREDENTIALS": "pgcredentials"
    }
  }    
}